<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Imagin'Woo Club Photo Waterloo{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>

    <!--  Styles  -->
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendor/magnific-popup/dist/magnific-popup.min.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">

    {% block stylesheets %}
    {% endblock %}
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    {% block importmap %}{{ importmap('app') }}{% endblock %}
</head>

<body>
<header class="navbar sticky-top navbar-expand-md bg-body-tertiary" aria-label="Thirteenth navbar example">
    <div class="container-fluid h-100">
        <a class="btn btn-primary me-3" href="{{ path('app_main') }}"><i class="bi bi-box-arrow-left"></i></a>
        <a class="navbar-brand col-md-3 col-lg-3 me-0 px-3 fs-4" href="">Admin Imagin'Woo</a>
        <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarDashboard" aria-controls="navbarDashboard" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse h-100 fs-5" id="navbarDashboard">
            <ul class="navbar-nav me-auto mb-2 mb-md-0 h-100">
                <li class="nav-item">
                    <a class="nav-link h-100 {% if app.current_route == 'app_admin' %}active{% endif %}" aria-current="page" href="{{ path('app_admin') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h-100 {% if app.current_route == 'app_admin_utilisateurs' %}active{% endif %}" href="{{ path('app_admin_utilisateurs') }}">Utilisateurs</a>
                </li>
            </ul>
            <span class="text-black">Bonjour {{ app.user.userIdentifier }}</span>
            <a class="btn btn-primary ms-3" href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    </div>
</header>

<div data-controller="{% block dataController %}{% endblock %}">
    {% block body %}{% endblock %}
</div>

{% block scripts %}{% endblock %}
</body>
</html>
